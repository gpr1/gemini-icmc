% Gemini theme
% https://github.com/anishathalye/gemini

% ====================
% Definitions
% ====================

\definecolor{laranjaICMC}{cmyk}{0,.4,.8,0}
\definecolor{azulPrimarioICMC}{cmyk}{.4,.2,0,.4}
\definecolor{azulSecundarioICMC}{cmyk}{.15,.07,0,.15}
\definecolor{cinzaMedioICMC}{cmyk}{0,0,0,.7}
\definecolor{cinzaClaroICMC}{cmyk}{.13,.13,.17,0}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=azulPrimarioICMC, bg=white}
\setbeamercolor{palette secondary}{fg=azulPrimarioICMC, bg=white}
\setbeamercolor{palette tertiary}{bg=azulPrimarioICMC, fg=white}
\setbeamercolor{palette quaternary}{fg=azulPrimarioICMC, bg=white}
\setbeamercolor{structure}{fg=azulSecundarioICMC}

% Headline
\setbeamercolor{headline}{fg=azulPrimarioICMC, bg=white}
\setbeamercolor{headline rule}{bg=laranjaICMC}

% Block
\setbeamercolor{block title}{fg=azulPrimarioICMC,bg=white}
\setbeamercolor{block separator}{bg=azulSecundarioICMC}
\setbeamercolor{block body}{fg=cinzaMedioICMC,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=azulPrimarioICMC,bg=azulSecundarioICMC}
\setbeamercolor{block alerted separator}{bg=cinzaMedioICMC}
\setbeamercolor{block alerted body}{fg=cinzaMedioICMC,bg=azulSecundarioICMC}

% Example Block
\setbeamercolor{block example title}{fg=azulPrimarioICMC,bg=cinzaClaroICMC}
\setbeamercolor{block example separator}{bg=cinzaMedioICMC}
\setbeamercolor{block example body}{fg=cinzaMedioICMC,bg=cinzaClaroICMC}

% Heading
\setbeamercolor{heading}{fg=azulPrimarioICMC}

% Itemize
\setbeamercolor{item}{fg=azulPrimarioICMC}

% Bibliography
\setbeamercolor{bibliography item}{fg=cinzaMedioICMC}
\setbeamercolor{bibliography entry author}{fg=cinzaMedioICMC}
\setbeamercolor{bibliography entry title}{fg=cinzaMedioICMC}
\setbeamercolor{bibliography entry location}{fg=cinzaMedioICMC}
\setbeamercolor{bibliography entry note}{fg=cinzaMedioICMC}
